enum CategoryType {
  FIXED
  FLEX 
  ROLLING
}

type CostCategory {
  id: ID! @id
  name: String!
  monthlyLimit: Float!
  type: CategoryType!
  totalLimit: Float
  createdAt: DateTime! @createdAt
  costs: [Cost!] @relation(name: "CostByCostCategory")
}

type MonthlyIncome {
  id: ID! @id
  amount: Float!
}

type Cost {
  id: ID! @id
  amount: Float!
  description: String!
  createdAt: DateTime! @createdAt 
  category: CostCategory! @relation(name: "CostByCostCategory")
}

type FinancialMonth {
  id: ID! @id
  month: Int!
  year: Int!
  income: Float!
  totalCost: Float!
  remainder: Float!
  closed: Boolean! @default(value: false)
}
