type FixedCostCategory {
  id: ID! @id
  name: String! @unique
  amount: Float!
}

type FlexCostCategory {
  id: ID! @id
  name: String! @unique
  limit: Float!
  costs: [Cost!] @relation(name: "CostsByCategory")
}

type RollingCostCategory {
  id: ID! @id
  name: String! @unique
  monthlyLimit: Float!
  totalLimit: Float!
}

type MonthlyIncome {
  id: ID! @id
  amount: Float!
}

type Cost {
  id: ID! @id
  amount: Float!
  description: String!
  createdAt: DateTime! @createdAt 
  category: FlexCostCategory! @relation(name: "CostsByCategory")
}

type FinancialMonth {
  id: ID! @id
  month: Int!
  year: Int!
  income: Float!
  totalCost: Float!
  remainder: Float!
  closed: Boolean! @default(value: false)
}
