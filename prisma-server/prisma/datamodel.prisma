enum CategoryType {
  FIXED
  FLEX 
  ROLLING
}

type CostCategory {
  id: ID! @id
  name: String!
  monthlyLimit: Float!
  type: CategoryType!
  totalLimit: Float
  createdAt: DateTime! @createdAt
  costs: [Cost!] @relation(name: "CostByCostCategory")
  user: User
}

type Cost {
  id: ID! @id
  amount: Float!
  description: String!
  createdAt: DateTime! @createdAt 
  category: CostCategory! @relation(name: "CostByCostCategory")
  user: User
}

type User {
  id: ID! @id
  name: String!
  email: String! @unique
  password: String!
  costs: [Cost!]
  categories: [CostCategory!]
  monthlyIncome: Float
}
