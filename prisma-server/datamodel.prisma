enum TimeFrame {
  Weekly
  Biweekly
  Semimonthly
  Monthly
}

type FixedCostCategory {
  id: ID! @id
  name: String! @unique
  amount: Float!
}

type FlexCostCategory {
  id: ID! @id
  name: String! @unique
  limit: Float!
}

type Income {
  id: ID! @id
  frequency: TimeFrame!
  amount: Float!
}

type Cost {
  id: ID! @id
  amount: Float!
  createdAt: DateTime! @createdAt 
  category: FlexCostCategory!
}