enum TimeFrame {
  Weekly
  Biweekly
  Semimonthly
  Monthly
}

type FixedCostCategory {
  id: ID! @id
  name: String! @unique
  amount: Float!
}

type FlexCostCategory {
  id: ID! @id
  name: String! @unique
  limit: Float!
}

type Income {
  id: ID! @id
  frequency: TimeFrame!
  amount: Float!
}

type Cost {
  id: ID! @id
  amount: Float!
  createdAt: DateTime! @createdAt 
  month: Int!
  year: Int!
  category: FlexCostCategory!
}

type FinancialMonth {
  id: ID! @id
  month: Int!
  year: Int!
  income: Float!
  totalCost: Float!
  remainder: Float!
  closed: Boolean! @default(value: false)
}

type SavingsGoal {
  id: ID! @id
  name: String!
  updatedAt: DateTime! @updatedAt
  goalAmount: Float!
  currentAmount: Float!
}
